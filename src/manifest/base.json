{
    "name": "directUC",
    "version": "1.0.0",
    "manifest_version": 2,
    "author": "Pedro Pablo Aste Kompen <wachunei@gmail.com>",
    "icons": {
      "16": "img/icon_16.png",
      "32": "img/icon_32.png",
      "48": "img/icon_48.png",
      "128": "img/icon_128.png",
      "256": "img/icon_256.png"
    },
    "description": "Accede r√°pidamente a diferentes servicios de la UC.",
    "permissions": [
      "http://*.uc.cl/*",
      "https://*.uc.cl/*",
      "http://*.puc.cl/*",
      "https://*.puc.cl/*",
      "notifications",
      "storage"
    ],
    "browser_action": {
      "default_icon": "img/icon_256.png",
      "default_title": "Abrir directUC",
      "default_popup": "pages/popup.html"
    },
    "omnibox": {
      "keyword": "uc"
    },
    "background": {
      "scripts": [
        "js/background.js"
      ],
      "persistent": true
    },
    "options_ui": {
      "page": "pages/options.html",
      "open_in_tab": true
    },
    "content_scripts": [],
    "content_security_policy": "script-src 'self' https://www.google-analytics.com 'unsafe-eval'; object-src 'self'"
  }