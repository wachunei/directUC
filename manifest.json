{
  "name": "directUC",
  "version": "0.3.23",
  "manifest_version": 2,
  "author": "wachunei",
  "incognito": "split",
  "icons": {
    "16": "i/icon_48.png",
    "48": "i/icon_48.png",
    "128": "i/icon_128.png",
    "256": "i/icon_256.png"
  },
  "description": "Accede r√°pidamente a diferentes servicios de la UC.",
  "permissions": [
    "http://*.uc.cl/*",
    "https://*.uc.cl/*",
    "http://*.puc.cl/*",
    "https://*.puc.cl/*",
    "notifications"
  ],
  "browser_action": {
    "default_icon": "i/icon_128.png",
    "default_title": "Abrir directUC",
    "default_popup": "popup.html"
  },
  "omnibox": {
    "keyword": "uc"
  },
  "background": {
    "scripts": [
      "js/fuse.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://sso.uc.cl/cas/login*",
        "https://webaccess.uc.cl/simplesaml/*"
      ],
      "js": [
        "js/cas-bar.js"
      ],
      "css": [
        "css/estilo-cas-bar.css"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}